model users_wallets {
  user_id   Int    @id
  name      String
  surname   String
  nickname  String
  email     String
  telephone String
  wallet_id Int?   // può essere null perché è un LEFT JOIN
  balance   Float? // può essere null perché è un LEFT JOIN

  @@map("users_wallets")
}


model view_reservations {
  id          Int      @id
  date        DateTime
  start_time  DateTime
  end_time    DateTime
  room        String?
  notes       String? 
  incoming    Boolean
  name        String?
  surname     String?
  telephone   String?
  email       String?
  nickname    String?
  description String?

  @@map("view_reservations")
}
